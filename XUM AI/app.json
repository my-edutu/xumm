{
  "name": "xum-ai",
  "slug": "xum-ai",
  "version": "1.0.0",
  "orientation": "portrait",
  "icon": "./assets/icon.png",
  "userInterfaceStyle": "dark",
  "newArchEnabled": true,
  "scheme": "xum",
  "splash": {
    "backgroundColor": "#0a0d1d"
  },
  "ios": {
    "supportsTablet": true,
    "bundleIdentifier": "com.xumai.app",
    "infoPlist": {
      "NSCameraUsageDescription": "XUM AI needs camera access to capture visual data for AI training.",
      "NSMicrophoneUsageDescription": "XUM AI needs microphone access to record audio for linguistic grounding.",
      "NSPhotoLibraryUsageDescription": "XUM AI needs photo library access to save captured media."
    }
  },
  "android": {
    "adaptiveIcon": {
      "foregroundImage": "./assets/adaptive-icon.png",
      "backgroundColor": "#0a0d1d"
    },
    "package": "com.xumai.app",
    "permissions": [
      "android.permission.CAMERA",
      "android.permission.RECORD_AUDIO",
      "android.permission.READ_EXTERNAL_STORAGE",
      "android.permission.WRITE_EXTERNAL_STORAGE",
      "android.permission.MODIFY_AUDIO_SETTINGS",
      "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
      "android.permission.READ_MEDIA_IMAGES",
      "android.permission.READ_MEDIA_VIDEO",
      "android.permission.READ_MEDIA_AUDIO"
    ]
  },
  "web": {
    "favicon": "./assets/favicon.png",
    "bundler": "metro",
    "output": "single"
  },
  "plugins": [
    [
      "expo-camera",
      {
        "cameraPermission": "XUM AI needs camera access to capture visual data for AI training."
      }
    ],
    [
      "expo-av",
      {
        "microphonePermission": "XUM AI needs microphone access to record audio for linguistic grounding."
      }
    ],
    "expo-media-library"
  ],
  "extra": {
    "eas": {
      "projectId": "0bb6df0b-e8dd-4c20-a5df-f7e00affe5cb"
    }
  },
  "owner": "xumai.test"
}
